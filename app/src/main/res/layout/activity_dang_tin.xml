<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDangTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Đăng Phòng"
                android:layout_marginLeft="-20dp"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#555555" />

    <ScrollView
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="630dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:text="Thông Tin Phòng"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="ID Phòng"
                    android:inputType="textPersonName" />

                <Spinner
                    android:id="@+id/loaiphong"
                    android:layout_width="match_parent"
                    android:layout_height="46dp" />

                <EditText
                    android:id="@+id/dientich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Diện Tích (m^3)"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edtphong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Số Phòng Ngủ "
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/vesinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Só Phòng Vệ Sinh"
                        android:inputType="number" />
                </LinearLayout>

                <EditText
                    android:id="@+id/gia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mức Giá "
                    android:inputType="number" />

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="Địa Chỉ"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/thanhpho"
                        android:layout_width="269dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Spinner
                        android:id="@+id/quanhuyen"
                        android:layout_width="273dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

                <EditText
                    android:id="@+id/tenphuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tên Phường"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/tenduong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tên Đường"
                    android:inputType="textCapWords" />

                <EditText
                    android:id="@+id/sonha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Số Nhà"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/kinhdo"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Kinh Do"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/vido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Vi Do"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="Tiện Ích"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/tieude"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tiêu Đề"
                    android:inputType="textCapWords" />

                <EditText
                    android:id="@+id/lienhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Liên Hệ (SDT)"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/mota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Mô Tả"
                    android:inputType="textCapWords" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EEEEEE"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/them"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawableTint="@color/white"
            android:text="Thêm"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#33CC33"
            android:textSize="12dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/huy"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:drawableTint="@color/white"
            android:text="Huỷ"
            android:layout_marginLeft="70dp"
            android:textColor="@color/white"
            android:backgroundTint="#EE0000"
            android:textSize="12dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>